{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/quantum/*": ["./lib/quantum/*"],
      "@/dna/*": ["./lib/dna/*"],
      "@/organisms/*": ["./organisms/*"],
      "@/consciousness/*": ["./lib/consciousness/*"],
      "@/qnet/*": ["./lib/qnet/*"]
    },
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "**/*.dna"],
  "exclude": ["node_modules", "scripts/*.py", "scripts/*.sh"]
}
